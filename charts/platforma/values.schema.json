{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/milaboratories/platforma-helm-charts/charts/platforma/values.schema.json",
  "title": "Platforma values schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "primaryStorage": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "docker": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "resources": { "type": "object", "additionalProperties": true }
          }
        },
        "s3": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" }
          }
        },
        "fs": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "pvc": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "enabled": { "type": "boolean" },
                "existingClaim": { "type": "string" },
                "storageClass": { "type": "string" },
                "size": { "type": "string" },
                "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] },
                "mountPath": { "type": "string" }
              },
              "allOf": [
                {
                  "if": { "properties": { "enabled": { "const": true } } },
                  "then": {
                    "anyOf": [
                      { "required": ["existingClaim"] },
                      { "required": ["storageClass", "size"] }
                    ]
                  }
                }
              ]
            }
          }
        },
        "gcs": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "mainRoot": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean", "description": "Enable single PVC for all data" },
            "createPvc": { "type": "boolean" },
            "existingClaim": { "type": "string" },
            "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] },
            "size": { "type": "string" },
            "storageClass": { "type": "string" },
            "mountPath": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "enabled": { "const": true } } },
              "then": {
                "anyOf": [
                  { "required": ["existingClaim"] },
                  { "properties": { "createPvc": { "const": true } }, "required": ["createPvc"] }
                ]
              }
            },
            {
              "if": { "properties": { "createPvc": { "const": true } } },
              "then": { "required": ["size"] }
            }
          ]
        },
        "dbDir": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "createPvc": { "type": "boolean" },
            "existingClaim": { "type": "string" },
            "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] },
            "size": { "type": "string" },
            "storageClass": { "type": "string" },
            "mountPath": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "enabled": { "const": true } } },
              "then": {
                "anyOf": [
                  { "required": ["existingClaim"] },
                  { "properties": { "createPvc": { "const": true } }, "required": ["createPvc"] }
                ]
              }
            },
            {
              "if": { "properties": { "createPvc": { "const": true } } },
              "then": { "required": ["size"] }
            }
          ]
        },
        "workDir": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "createPvc": { "type": "boolean" },
            "existingClaim": { "type": "string" },
            "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] },
            "size": { "type": "string" },
            "storageClass": { "type": "string" },
            "mountPath": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "enabled": { "const": true } } },
              "then": {
                "anyOf": [
                  { "required": ["existingClaim"] },
                  { "properties": { "createPvc": { "const": true } }, "required": ["createPvc"] }
                ]
              }
            },
            {
              "if": { "properties": { "createPvc": { "const": true } } },
              "then": { "required": ["size"] }
            }
          ]
        },
        "packagesDir": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "createPvc": { "type": "boolean" },
            "existingClaim": { "type": "string" },
            "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] },
            "size": { "type": "string" },
            "storageClass": { "type": "string" },
            "mountPath": { "type": "string" }
          },
          "allOf": [
            {
              "if": { "properties": { "enabled": { "const": true } } },
              "then": {
                "anyOf": [
                  { "required": ["existingClaim"] },
                  { "properties": { "createPvc": { "const": true } }, "required": ["createPvc"] }
                ]
              }
            },
            {
              "if": { "properties": { "createPvc": { "const": true } } },
              "then": { "required": ["size"] }
            }
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "mainRoot": {
                "properties": { "enabled": { "const": false } }
              }
            }
          },
          "then": {
            "anyOf": [
              { "properties": { "dbDir": { "properties": { "enabled": { "const": true } }, "required": ["enabled"] } } },
              { "properties": { "workDir": { "properties": { "enabled": { "const": true } }, "required": ["enabled"] } } },
              { "properties": { "packagesDir": { "properties": { "enabled": { "const": true } }, "required": ["enabled"] } } }
            ],
            "errorMessage": "persistence.mainRoot.enabled is false, but none of dbDir/workDir/packagesDir are enabled"
          }
        },
        {
          "if": {
            "properties": { "mainRoot": { "properties": { "enabled": { "const": true } } } }
          },
          "then": {}
        }
      ]
    },
    "googleBatch": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" },
        "storage": { "type": "string" },
        "volumes": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "existingClaim": { "type": "string" },
            "storageClass": { "type": "string" },
            "size": { "type": "string" },
            "accessMode": { "type": "string", "enum": ["ReadWriteOnce", "ReadWriteMany"] }
          },
          "allOf": [
            {
              "if": { "properties": { "enabled": { "const": true } } },
              "then": {
                "anyOf": [
                  { "required": ["existingClaim"] },
                  { "required": ["storageClass", "size"] }
                ]
              }
            }
          ]
        }
      }
    },
    "replicaCount": { "type": "integer", "minimum": 0 },
    "image": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "repository": { "type": "string" },
        "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] },
        "tag": { "type": "string" }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": { "type": "object", "properties": { "name": { "type": "string" } }, "additionalProperties": true }
    },
    "serviceAccount": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "service": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"] },
        "port": { "type": "integer" },
        "loadBalancerIP": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "ingress": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "host": { "type": "string" },
        "tls": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" }, "secretName": { "type": "string" } },
          "additionalProperties": true
        },
        "paths": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "grpc": {
              "type": "object",
              "properties": { "enabled": { "type": "boolean" }, "path": { "type": "string" }, "pathType": { "type": "string" } },
              "additionalProperties": true
            },
            "http": {
              "type": "object",
              "properties": { "enabled": { "type": "boolean" }, "path": { "type": "string" }, "pathType": { "type": "string" } },
              "additionalProperties": true
            }
          }
        }
      }
    },
    "probes": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "liveness": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "type": { "type": "string", "enum": ["httpGet", "tcpSocket", "grpc"] },
            "initialDelaySeconds": { "type": "integer" },
            "periodSeconds": { "type": "integer" },
            "timeoutSeconds": { "type": "integer" },
            "successThreshold": { "type": "integer" },
            "failureThreshold": { "type": "integer" },
            "httpGet": { "type": "object", "properties": { "path": { "type": "string" }, "port": { "type": "integer" } }, "additionalProperties": true },
            "tcpSocket": { "type": "object", "properties": { "port": { "type": "integer" } }, "additionalProperties": true },
            "grpc": { "type": "object", "properties": { "port": { "type": "integer" }, "service": { "type": "string" } }, "additionalProperties": true }
          }
        },
        "readiness": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": { "type": "boolean" },
            "type": { "type": "string", "enum": ["httpGet", "tcpSocket", "grpc"] },
            "initialDelaySeconds": { "type": "integer" },
            "periodSeconds": { "type": "integer" },
            "timeoutSeconds": { "type": "integer" },
            "successThreshold": { "type": "integer" },
            "failureThreshold": { "type": "integer" },
            "httpGet": { "type": "object", "properties": { "path": { "type": "string" }, "port": { "type": "integer" } }, "additionalProperties": true },
            "tcpSocket": { "type": "object", "properties": { "port": { "type": "integer" } }, "additionalProperties": true },
            "grpc": { "type": "object", "properties": { "port": { "type": "integer" }, "service": { "type": "string" } }, "additionalProperties": true }
          }
        }
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "variables": { "type": ["object", "null"], "additionalProperties": { "type": "string" } },
        "secretVariables": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "secretKeyRef": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "name": { "type": "string" },
                  "key": { "type": "string" },
                  "optional": { "type": "boolean" }
                }
              }
            }
          }
        },
        "configMapVariables": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "configMapKeyRef": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "name": { "type": "string" },
                  "key": { "type": "string" },
                  "optional": { "type": "boolean" }
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "oneOf": [
        { "properties": { "primaryStorage": { "properties": { "s3": { "properties": { "enabled": { "const": true } } } } } } },
        { "properties": { "primaryStorage": { "properties": { "fs": { "properties": { "enabled": { "const": true } } } } } } },
        { "properties": { "primaryStorage": { "properties": { "gcs": { "properties": { "enabled": { "const": true } } } } } } }
      ],
      "errorMessage": "Exactly one primaryStorage must be enabled (s3, fs, or gcs)."
    },
    {
      "if": {
        "properties": {
          "persistence": {
            "properties": {
              "mainRoot": { "properties": { "enabled": { "const": true } } }
            }
          }
        }
      },
      "then": {}
    }
  ]
}

